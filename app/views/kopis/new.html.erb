<%= form_with scope: :kopis, url: new_kopi_path, local: true do |form| %>


  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <%= form.collection_select :origin_id, @origins, :id, :location %><br>
  <br>
  <%= form.collection_select :roast_id, @roasts, :id, :roastedness %>

  <p>
    <%= form.submit %>
  </p>
<% end %>